<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomBar" parent="@style/Widget.Design.BottomNavigationView">
        <item name="android:background">#1EA2ED</item>
    </style>

    <style name="BottomBarButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MainCheckButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:shape">oval</item>
        <item name="android:color">#2B7BC5</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>